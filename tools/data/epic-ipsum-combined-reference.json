  "usage_examples": {
    "basic_generation": {
      "description": "Generate 3 paragraphs of medium-length fate-themed text",
      "code": "const result = epicGen.generateIpsum({ mode: 'fate', length: 'medium', paragraphs: 3 });",
      "options": {
        "mode": "fate",
        "length": "medium",
        "paragraphs": 3
      }
    },
    "homer_only": {
      "description": "Generate only Homer fragments",
      "code": "const result = epicGen.generateIpsum({ mode: 'labor', useHomer: true, useHesiod: false });",
      "options": {
        "mode": "labor",
        "useHomer": true,
        "useHesiod": false
      }
    },
    "blended_with_bias": {
      "description": "Generate blended text with Hesiod bias",
      "code": "const result = epicGen.generateIpsum({ mode: 'genealogy', blend: 0.75, sentences: 5 });",
      "options": {
        "mode": "genealogy",
        "blend": 0.75,
        "sentences": 5,
        "note": "blend > 0.5 makes Hesiod dominant"
      }
    },
    "reproducible": {
      "description": "Generate reproducible output with seeded random",
      "code": "const result = epicGen.generateIpsum({ mode: 'endurance', seedRandom: 42 });",
      "options": {
        "mode": "endurance",
        "seedRandom": 42,
        "note": "Same seed always produces identical output"
      }
    }
  },
  "architecture_notes": {
    "fragment_selection": "Fragments are selected based on mode+role matching, then filtered by source (HOMER/HESIOD), then weighted random selection",
    "blending_logic": "When both sources are enabled, blend parameter (0-1) determines dominant source per paragraph. Non-dominant fragments 'intrude' at a rate between intrusion_rate_min and intrusion_rate_max",
    "intrusion_bias": "Roles listed in intrusion_role_bias (modifier, consequence) have 1.5x higher chance of being intrusions",
    "deduplication": "Fragment IDs are tracked per paragraph to avoid repetition within the same paragraph",
    "weight_calculation": "effectiveWeight = fragment.weight * sources[source].default_weight",
    "template_patterns": "Templates use {role} tokens that are replaced with matching fragments during generation"
  }
}
